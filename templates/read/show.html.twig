{% extends 'base.html.twig' %}

{% block title %}Hello ReadBookController!{% endblock %}

{% block body %}

<div class="intro">
    <h1>Aventure</h1>
</div>
<div class="box01">
    <div class="container">
        <div class="row">
       
            <div class="col-xl-3">
                <p>image</p>
            </div>
            <div class="col-xl-4">   
                <p> {{ character.characterName }}</p>
                <table class="table table-bordered">
                    <tr>
                        <td>Classe : </td>
                        <td>{{character.class}}</td>
                    </tr>
                    <tr>
                        <td>Genre : </td>
                        <td>{{character.gender}}</td>
                    </tr>
                    <tr>
                        <td>Level : </td>
                        <td>{{character.level}}</td>
                    </tr>
                    <tr>
                        <td>Point de vie : </td>
                        <td>{{character.lifePoint}}</td>
                    </tr>
                    <tr>
                        <td>Dexterité : </td>
                        <td>{{character.dexterity}}</td>
                    </tr>
                    <tr>
                        <td>points d'attaque : </td>
                        <td>{{character.attack}}</td>
                    </tr>
                    <tr>
                        <td>point de défense : </td>
                        <td>{{character.defense}}</td>
                    </tr>
                </table>
            </div>
            <div class="col-xl-3">
                <p>Equipements</p>
                {% for equipment in character.equipment %}
                    <table class="table table-bordered">
                        <tr>
                            <td>Objet</td>
                            <td>{{ equipment.name }}</td>
                        </tr>
                    </table>
                {% endfor %}
            </div>
       
        </div>
    </div>
</div>
<div class="box02">
    <div class="container">
        <h2>Affichage des livres</h2>
        <p>{{ chapter.book.name }} écrit par {{ chapter.book.author }}</p>
        <p>{{ chapter.name }}</p>
        <p>{{ chapter.text }}</p>
        {% for road in chapter.roads %}
            <a href="{{ path('readBook.goToChapter', {'character':character.id, 'road':road.id}) }}"><button class="btn btn-primary">{{road.content}}</button></a>
        {% endfor %}
    </div>
</div>

{% endblock %}
